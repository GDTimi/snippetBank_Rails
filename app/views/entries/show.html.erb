<div class ="entry-large">
    <h3>
        <%= @entry.title %>
    </h3>

    <p class="entry-description">
        <%= @entry.description %>
    </p>

    <%= render @entry.snippets %>    

    <div>
    <a href="<%= edit_entry_path(@entry) %>"><button class="ui-button-standard">Edit Entry</button></a>

    <%= button_to "Delete entry", entry_path(@entry), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure you want to delete this entry and associated snippets?"
        }, :class => 'ui-button-delete',  method: :delete %>
    </div>
</div>
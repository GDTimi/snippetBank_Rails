<h1 class='page-title'>snippetBank()</h1>

<div class="entries">
    <% @entries.each do |entry| %>
            <div class ="entry">
                <h3>
                    <%= entry.title %>
                </h3>

                <p class="entry-description">
                    <%= entry.description %>
                </p>

            <%= render entry.snippets %>   

            <a href="<%= entries_path(entry) %>"><button>View</button></a>
         
            </div>
    <% end %>

</div>
